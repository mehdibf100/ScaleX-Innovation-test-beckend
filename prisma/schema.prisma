generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id          Int       @id @default(autoincrement())
  firebaseUid String    @db.VarChar(255)
  title       String?
  summary     String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  messages    Message[]
  summaries   Summary[]

  @@index([firebaseUid])
}

model Message {
  id             Int          @id @default(autoincrement())
  conversationId Int
  content        String       @db.Text
  isFromUser     Boolean      @default(true)
  timestamp      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

model Summary {
  id             String        @id @default(uuid())
  conversationId Int?          // optional si summary n'est pas lié à une conversation
  conversation   Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  firebaseUid    String        @db.VarChar(255)
  context        String?       // meta / contexte (optionnel)
  summary        String        @db.Text
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([conversationId])
  @@index([firebaseUid])
  @@unique([conversationId, firebaseUid])
}
